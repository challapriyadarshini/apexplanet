<header>
  <h1>Advanced Styling & JavaScript Project</h1>
</header>

<div class="container">

  <!-- ******** IMAGE CAROUSEL ******** -->
  <h2>üì∏ Image Carousel (JavaScript)</h2>

  <div class="carousel">
    <img src="https://picsum.photos/800/400?1" class="active">
    <img src="https://picsum.photos/800/400?2">
    <img src="https://picsum.photos/800/400?3">
  </div>

  <div class="buttons">
    <button onclick="prevImage()">Previous</button>
    <button onclick="nextImage()">Next</button>
  </div>
  <div class="quiz-container">
  <h2>üìù JavaScript Quiz</h2>

  <div id="quizBox">
    <h3 id="question"></h3>

    <div class="options">
      <button class="optBtn" onclick="checkAnswer(0)"></button>
      <button class="optBtn" onclick="checkAnswer(1)"></button>
      <button class="optBtn" onclick="checkAnswer(2)"></button>
      <button class="optBtn" onclick="checkAnswer(3)"></button>
    </div>

    <p id="result"></p>
    <button id="nextBtn" onclick="nextQuestion()">Next Question</button>
  </div>
</div>

  <!-- ******** API DATA ******** -->
  <div class="api-box">
    <h2>üåê Fetch Data From API</h2>
    <p id="joke">Click the button to load a joke!</p>
    <button onclick="getJoke()">Get Random Joke</button>
  </div>
  


</div>

<script>
  /* ---------------- IMAGE CAROUSEL ---------------- */
  let index = 0;
  const images = document.querySelectorAll('.carousel img');

  function showImage(i) {
    images.forEach(img => img.classList.remove('active'));
    images[i].classList.add('active');
  }

  function nextImage() {
    index = (index + 1) % images.length;
    showImage(index);
  }

  function prevImage() {
    index = (index - 1 + images.length) % images.length;
    showImage(index);
  }

  /* Auto-rotation every 3 sec */
  setInterval(nextImage, 3000);
  /* ---------- QUIZ QUESTIONS ---------- */
const quiz = [
  {
    question: "Which HTML tag is used to link JavaScript?",
    options: ["<javascript>", "<js>", "<script>", "<link>"],
    answer: 2
  },
  {
    question: "Which method prints output in console?",
    options: ["print()", "console.log()", "display()", "write()"],
    answer: 1
  },
  {
    question: "Which keyword is used to declare a variable?",
    options: ["var", "define", "letvar", "new"],
    answer: 0
  },
  {
    question: "What does CSS stand for?",
    options: ["Creative Style Sheets", "Cascading Style Sheets", "Colorful Style Sheets", "Computer Style Sheets"],
    answer: 1
  }
];

let current = 0;
let score = 0;

/* Load question */
function loadQuiz() {
  document.getElementById("result").innerText = "";
  document.getElementById("nextBtn").style.display = "none";

  const q = quiz[current];
  document.getElementById("question").innerText = q.question;

  const buttons = document.querySelectorAll(".optBtn");
  buttons.forEach((btn, i) => {
    btn.innerText = q.options[i];
    btn.disabled = false;
    btn.style.background = "#007bff";
  });
}

loadQuiz();

/* Check answer */
function checkAnswer(i) {
  const q = quiz[current];
  const buttons = document.querySelectorAll(".optBtn");

  if (i === q.answer) {
    score++;
    document.getElementById("result").innerText = "Correct üéâ";
    buttons[i].style.background = "#28a745";
  } else {
    document.getElementById("result").innerText = "Wrong ‚ùå";
    buttons[i].style.background = "#dc3545";
  }

  buttons.forEach(btn => btn.disabled = true);
  document.getElementById("nextBtn").style.display = "block";
}

/* Load next question */
function nextQuestion() {
  current++;

  if (current >= quiz.length) {
    document.getElementById("quizBox").innerHTML =
      `<h2>Your Score: ${score}/${quiz.length}</h2>
       <p>Great job! üéâ</p>`;
    return;
  }

  loadQuiz();
}



  /* ---------------- API FETCH (JOKE API) ---------------- */
  async function getJoke() {
    const response = await fetch("https://v2.jokeapi.dev/joke/Any?type=single");
    const data = await response.json();
    document.getElementById("joke").innerText = data.joke;
  }
</script>

</body>
