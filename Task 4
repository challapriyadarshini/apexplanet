script.js

/******** NOTES APP WITH SEARCH & EDIT ********/
let notes = JSON.parse(localStorage.getItem("notesData")) || [];
let editIndex = null;
const notesContainer = document.getElementById("notesContainer");

function renderNotes(filteredNotes = notes){
  notesContainer.innerHTML="";
  filteredNotes.forEach((note,index)=>{
    notesContainer.innerHTML += `
      <div class="note">
        <h4>${note.title}</h4>
        <p>${note.content}</p>
        <div style="margin-top:10px;">
          <small style="cursor:pointer;" onclick="editNote(${index})">âœï¸ Edit</small> |
          <small style="cursor:pointer;" onclick="deleteNote(${index})">ğŸ—‘ï¸ Delete</small>
        </div>
      </div>
    `;
  });
}

function saveNote(){
  const title = document.getElementById("noteTitle").value;
  const content = document.getElementById("noteContent").value;

  if(!title || !content){
    alert("Please enter title and content");
    return;
  }

  if(editIndex === null){
    notes.push({title,content});
  } else {
    notes[editIndex] = {title,content};
    editIndex = null;
  }

  localStorage.setItem("notesData", JSON.stringify(notes));
  document.getElementById("noteTitle").value="";
  document.getElementById("noteContent").value="";
  renderNotes();
}

function editNote(index){
  document.getElementById("noteTitle").value = notes[index].title;
  document.getElementById("noteContent").value = notes[index].content;
  editIndex = index;
}

function deleteNote(index){
  notes.splice(index,1);
  localStorage.setItem("notesData", JSON.stringify(notes));
  renderNotes();
}

function searchNotes(){
  const query = document.getElementById("searchNote").value.toLowerCase();
  const filtered = notes.filter(note =>
    note.title.toLowerCase().includes(query) ||
    note.content.toLowerCase().includes(query)
  );
  renderNotes(filtered);
}

renderNotes();


/******** PRODUCTS ********/
const products = [
  {name:"Laptop",price:60000,category:"tech"},
  {name:"Wireless Earbuds",price:3000,category:"tech"},
  {name:"Jacket",price:2500,category:"fashion"},
  {name:"Sneakers",price:4500,category:"fashion"}
];

function showProducts(list){
  const c = document.getElementById("productContainer");
  c.innerHTML="";
  list.forEach(p=>{
    c.innerHTML+=`
      <div class="product">
        <h3>${p.name}</h3>
        <p>â‚¹${p.price}</p>
      </div>
    `;
  });
}

function filterProducts(){
  const v = document.getElementById("category").value;
  showProducts(v==="all"?products:products.filter(p=>p.category===v));
}

function sortProducts(){
  const v = document.getElementById("price").value;
  let arr=[...products];
  if(v==="low") arr.sort((a,b)=>a.price-b.price);
  if(v==="high") arr.sort((a,b)=>b.price-a.price);
  showProducts(arr);
}

showProducts(products);
