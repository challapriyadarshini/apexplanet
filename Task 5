<body>
<header>
  <h1>NovaShop</h1>
  <p>Modern, clean, and responsive ecommerce demo UI</p>
</header>

<div class="container">
  <section class="product-section">
    <div class="filters" aria-label="Filter products">
      <button class="filter-btn active" data-category="all">All</button>
      <button class="filter-btn" data-category="clothing">Clothing</button>
      <button class="filter-btn" data-category="accessories">Accessories</button>
      <button class="filter-btn" data-category="gadgets">Gadgets</button>
    </div>
    <div class="product-list" id="productList"></div>
  </section>

  <aside class="cart-section" aria-label="Shopping cart" aria-live="polite">
    <div class="cart-header">
      <span>Your Cart</span>
      <span id="cartCount">0 items</span>
    </div>
    <div class="cart-items" id="cartItems">
      <p style="color:#9ca3af;font-size:0.9rem;">Your cart is empty</p>
    </div>
    <div class="cart-total">
      <span>Total</span>
      <span id="cartTotal">$0.00</span>
    </div>
    <button class="checkout-btn" id="checkoutBtn" disabled>Proceed to Checkout</button>
  </aside>
</div>

<script>
  const products = [
    { id:1,name:"Trendy T-Shirt",category:"clothing",img:"https://tse1.mm.bing.net/th/id/OIP.f4Qg84YzOuEDqbBniH3LAQHaLH?pid=Api&P=0&h=180",rating:4,price:19.99 },
    { id:2,name:"Classic Hat",category:"accessories",img:"https://tse2.mm.bing.net/th/id/OIP.t6nqjDwg18AyFG93Hur2mgHaGI?pid=Api&P=0&h=180",rating:3,price:12.99 },
    { id:3,name:"Smartwatch Pro",category:"gadgets",img:"https://tse4.mm.bing.net/th/id/OIP.O63JwO6KSI2419fbh2cksgHaHa?pid=Api&P=0&h=180",rating:5,price:99.99 },
    { id:4,name:"Denim Jeans",category:"clothing",img:"https://i.pinimg.com/originals/24/23/d7/2423d7adb3456b95d3b08752b668dbbf.jpg",rating:4,price:45.5 },
    { id:5,name:"Sleek Sunglasses",category:"accessories",img:"https://tse4.mm.bing.net/th/id/OIP.rzIXhwMG9tMxIMwHSiIgBAHaDX?pid=Api&P=0&h=180",rating:4,price:25.0 },
    { id:6,name:"Wireless Headphones",category:"gadgets",img:"https://tse1.mm.bing.net/th/id/OIP.695pezCiyFfvsKcOL6svGgHaHZ?pid=Api&P=0&h=180",rating:5,price:59.99 }
  ];

  const productList=document.getElementById("productList");
  const filterButtons=document.querySelectorAll(".filter-btn");
  const cartItemsContainer=document.getElementById("cartItems");
  const cartTotal=document.getElementById("cartTotal");
  const cartCount=document.getElementById("cartCount");
  const checkoutBtn=document.getElementById("checkoutBtn");

  let cart={};

  function getStarRating(rating){
    let stars="";
    for(let i=0;i<5;i++){
      if(i<rating){
        stars+=`<svg class="star" viewBox="0 0 20 20"><path d="M10 15l-5.878 3.09L5.64 11.18 1 7.255l6.06-.525L10 1l2.94 5.73 6.06.525-4.64 3.926 1.516 6.91z"/></svg>`;
      }else{
        stars+=`<svg class="star" viewBox="0 0 20 20" style="fill:#e5e7eb"><path d="M10 15l-5.878 3.09L5.64 11.18 1 7.255l6.06-.525L10 1l2.94 5.73 6.06.525-4.64 3.926 1.516 6.91z"/></svg>`;
      }
    }
    return stars;
  }

  function renderProducts(filter="all"){
    productList.innerHTML="";
    const filtered=filter==="all"?products:products.filter(p=>p.category===filter);
    filtered.forEach(({id,name,img,rating,price})=>{
      const card=document.createElement("div");
      card.className="product-card";
      card.innerHTML=`
        <img src="${img}" alt="${name}" loading="lazy">
        <div class="product-name">${name}</div>
        <div class="product-meta">
          <div class="rating" aria-label="Rating ${rating} of 5">${getStarRating(rating)}</div>
          <div class="price">$${price.toFixed(2)}</div>
        </div>
        <button class="btn-add" data-id="${id}">
          <span>➕</span><span>Add to Cart</span>
        </button>
      `;
      productList.appendChild(card);
    });
    document.querySelectorAll(".btn-add").forEach(btn=>{
      btn.onclick=()=>addToCart(Number(btn.dataset.id));
    });
  }

  function renderCart(){
    cartItemsContainer.innerHTML="";
    const items=Object.values(cart);
    if(!items.length){
      cartItemsContainer.innerHTML=`<p style="color:#9ca3af;font-size:0.9rem;">Your cart is empty</p>`;
      cartTotal.textContent="$0.00";
      cartCount.textContent="0 items";
      checkoutBtn.disabled=true;
      return;
    }
    let total=0, count=0;
    items.forEach(({product,quantity})=>{
      total+=product.price*quantity;
      count+=quantity;
      const div=document.createElement("div");
      div.className="cart-item";
      div.innerHTML=`
        <img src="${product.img}" alt="${product.name}">
        <div class="cart-item-details">
          <div class="cart-item-name">${product.name}</div>
          <div class="cart-item-price">$${product.price.toFixed(2)}</div>
        </div>
        <div class="cart-item-qty">
          <div class="qty-row">
            <button class="qty-btn" data-id="${product.id}" data-action="decrease">−</button>
            <div class="qty-number">${quantity}</div>
            <button class="qty-btn" data-id="${product.id}" data-action="increase">+</button>
          </div>
          <button class="qty-btn remove" data-id="${product.id}" data-action="remove">×</button>
        </div>
      `;
      cartItemsContainer.appendChild(div);
    });
    cartTotal.textContent=`$${total.toFixed(2)}`;
    cartCount.textContent=`${count} item${count>1?"s":""}`;
    checkoutBtn.disabled=false;

    cartItemsContainer.querySelectorAll(".qty-btn").forEach(btn=>{
      btn.onclick=()=>{
        const id=Number(btn.dataset.id);
        const action=btn.dataset.action;
        if(action==="increase") changeQuantity(id,1);
        if(action==="decrease") changeQuantity(id,-1);
        if(action==="remove") removeItem(id);
      };
    });
  }

  function addToCart(id){
    if(cart[id]) cart[id].quantity++;
    else{
      const product=products.find(p=>p.id===id);
      cart[id]={product,quantity:1};
    }
    renderCart();
  }
  function changeQuantity(id,delta){
    if(!cart[id]) return;
    cart[id].quantity+=delta;
    if(cart[id].quantity<=0) delete cart[id];
    renderCart();
  }
  function removeItem(id){
    delete cart[id];
    renderCart();
  }

  filterButtons.forEach(btn=>{
    btn.onclick=()=>{
      filterButtons.forEach(b=>b.classList.remove("active"));
      btn.classList.add("active");
      renderProducts(btn.dataset.category);
    };
  });

  checkoutBtn.onclick=()=>alert("Checkout not implemented in this demo UI.");

  renderProducts();
</script>
</body>
</html>
